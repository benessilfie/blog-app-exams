<div class="mt-12 mb-20">

  <% if notice.present? %>
  <p class="py-4 bg-[#111] border border-green-700 text-xs mb-5 text-green-700 rounded-full px-6 inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>

   <div class="flex mb-2">
     <div class="inline-block mt-1 mr-4">
          <%= link_to root_path do %> <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#4a4a4a" class="w-6 h-6 hover:stroke-[#7e7e7e]"> <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15m0 0l6.75 6.75M4.5 12l6.75-6.75"/></svg>
          <% end %>
          </div>
       <div class="text-2xl font-bold"><%= @blog.title %></div>
   </div>

  <% if @blog.user == @current_user %>
  <span class="bg-[#111111] border border-[#4a4a4a] text-[#eaeaea] mt-4 text-xs font-medium inline-flex items-center px-2.5 py-2 rounded-full mr-2  hover:bg-[#1e1e1e]">
  <svg aria-hidden="true" class="mr-1 w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path></svg>
  You published this article <%= time_ago_in_words(@blog.created_at) %> ago
</span>

  <span class="text-xs px-2.5 py-2 rounded-full bg-[#111111] border border-[#4a4a4a] text-[#eaeaea] mr-2 hover:border-green-900 hover:bg-green-700"><%= link_to "Edit post", edit_blog_path(@blog) %></span>

  <span class="text-xs px-2.5 py-2 rounded-full bg-[#111111] border border-[#4a4a4a] text-[#eaeaea] mr-2 hover:border-red-900 hover:bg-red-800"><%= link_to "Delete Post", @blog, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this Blog Post?" } %></span>
<% else %>
  <span class="bg-[#111111] border border-[#4a4a4a] text-[#eaeaea] mt-4 text-xs font-medium inline-flex items-center px-2.5 py-2 rounded-full mr-2 dark:bg-gray-700 dark:text-gray-300 hover:bg-[#1e1e1e]">
    <svg aria-hidden="true" class="mr-1 w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path></svg>
    <%= @blog.user.first_name %> published this article <%= time_ago_in_words(@blog.created_at) %> ago
  </span>
<% end %>
  <div class="text-[#939393] text-[0.9rem] text-justify my-8"><%= @blog.body %></div>
</div>
